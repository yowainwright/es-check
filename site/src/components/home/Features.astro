---
import { getUrl } from "../../utils/url";

const features = [
  {
    title: "Fast",
    description: "Quickly scan thousands of tokens to ensure ES compatibility without slowing down your build process.",
    link: getUrl("docs/performance"),
  },
  {
    title: "Version Specific",
    description: "Support for all ECMAScript versions from ES3 to ES16/ES2025, ensuring comprehensive coverage.",
    link: getUrl("docs/options"),
  },
  {
    title: "CI/CD Ready",
    description: "Seamlessly integrate with your build pipeline to catch compatibility issues before production.",
    link: getUrl("docs/ci-integration"),
  },
  {
    title: "Flexible Configuration",
    description: "Use CLI arguments or configuration files to customize ES Check for your specific needs.",
    link: getUrl("docs/configuration"),
  },
  {
    title: "Browserslist Support",
    description: "Automatically determine ES version based on your target browsers using browserslist integration.",
    link: getUrl("docs/browserslist"),
  },
  {
    title: "Detailed Error Reports",
    description: "Get precise error locations and descriptions to quickly fix compatibility issues.",
    link: getUrl("docs/debugging"),
  },
];
---

<div
  class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 md:gap-10 justify-items-center py-16 md:py-20 lg:py-28 px-4 md:px-8"
>
  {
    features.map((feature) => (
      <a href={feature.link} class="card w-full max-w-sm md:max-w-2xl bg-gradient-to-t from-base-100 to-base-300/50 border border-base-content/20 hover:border-primary/40 hover:shadow-lg transition-all duration-200 cursor-pointer">
        <div class="card-body font-outfit p-6 md:p-8">
          <h2 class="card-title text-lg md:text-xl flex items-center justify-between">
            {feature.title}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-primary">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </h2>
          <p class="text-sm md:text-base">{feature.description}</p>
        </div>
      </a>
    ))
  }
</div>