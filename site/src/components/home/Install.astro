---
import { CopyButton } from "../common/CopyButton";
import { getUrl } from "../../utils/url";
---

<div
  class="hero bg-base-100 text-base-content mx-auto py-28 max-w-md md:max-w-full"
>
  <div class="hero-content text-center">
    <div class="w-full max-w-xl font-outfit">
      <h1 class="text-2xl md:text-5xl font-bold">
        Install <span class="text-primary">ES Check</span>
      </h1>

      <p class="mt-5 w-full max-w-lg text-start">
        Install ES Check as a development dependency
      </p>
      <div
        class="flex items-center bg-base-300 rounded-lg mt-4 justify-between overflow-hidden h-12 max-w-full border border-base-content/10"
      >
        <code class="ml-4 text-sm md:text-base pr-2 overflow-x-auto whitespace-nowrap flex-1">npm install es-check --save-dev</code>
        <CopyButton client:only="react" />
      </div>

      <a href={getUrl('docs/installation')}>
        <button class="btn btn-lg btn-primary mt-7 text-lg border border-base-content/10">Installation Guide</button>
      </a>
    </div>
  </div>
</div>