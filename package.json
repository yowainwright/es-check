{
  "name": "es-check",
  "version": "8.0.2",
  "description": "Checks the ECMAScript version of .js glob against a specified version of ECMAScript with a shell command",
  "main": "index.js",
  "license": "MIT",
  "files": [
    "index.js",
    "utils.js",
    "detectFeatures.js",
    "constants.js"
  ],
  "bin": {
    "es-check": "index.js"
  },
  "scripts": {
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "lint": "eslint index.js --fix",
    "lint:ci": "eslint index.js utils.js detectFeatures.js constants.js",
    "pre-commit": "pnpm lint && pnpm test",
    "prepare": "husky",
    "prepublishOnly": "pnpm test",
    "release": "release-it",
    "report:coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "setup": "pnpm install --reporter=silent",
    "test": "nyc mocha test.js utils.test.js --timeout 10s",
    "update": "codependence --update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/es-check.git"
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in), Brian Gonzalez <me@briangonzalez.org>",
  "bugs": {
    "url": "https://github.com/yowainwright/es-check/issues"
  },
  "homepage": "https://github.com/yowainwright/es-check#readme",
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@commitlint/format": "^19.3.0",
    "@commitlint/prompt": "19.8.0",
    "assert": "^2.1.0",
    "codecov": "^3.8.3",
    "codependence": "^0.3.1",
    "commitizen": "4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.1",
    "husky": "9.1.7",
    "is-ci": "^3.0.1",
    "mocha": "11.1.0",
    "nyc": "^17.1.0",
    "path-exists-cli": "^2.0.0",
    "prettier": "3.5.3",
    "release-it": "18.1.2"
  },
  "dependencies": {
    "acorn": "8.14.1",
    "acorn-walk": "^8.3.4",
    "commander": "13.1.0",
    "fast-glob": "^3.3.3",
    "lilconfig": "^3.0.0",
    "supports-color": "8.1.1",
    "winston": "3.17.0"
  },
  "engines": {
    "node": ">= 4"
  },
  "keywords": [
    "check for es6",
    "check for modules",
    "es",
    "es check",
    "es matching",
    "es version",
    "ecmascript",
    "ecmascript check",
    "ecmascript matching",
    "ecmascript version",
    "js",
    "js version",
    "js version check",
    "js version matching",
    "test js version",
    "test ecmascript version"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
