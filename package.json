{
  "name": "es-check",
  "version": "7.0.0",
  "description": "Checks the ECMAScript version of .js glob against a specified version of ECMAScript with a shell command",
  "main": "index.js",
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "bin": {
    "es-check": "index.js"
  },
  "scripts": {
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "husky-setup": "path-exists .husky/commit-msg || (husky install && pnpm husky-setup:commit-msg && pnpm husky-setup:post-merge && pnpm husky-setup:pre-commit)",
    "husky-setup:commit-msg": "npx husky add .husky/commit-msg 'pnpm run commit-msg'",
    "husky-setup:post-merge": "npx husky add .husky/post-merge 'pnpm run setup'",
    "husky-setup:pre-commit": "npx husky add .husky/pre-commit 'pnpm run pre-commit'",
    "lint": "eslint index.js --fix",
    "lint:ci": "eslint index.js",
    "pre-commit": "pnpm lint && pnpm test",
    "prepare": "is-ci || pnpm husky-setup",
    "prepublishOnly": "pnpm test",
    "release": "release-it",
    "report:coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "setup": "pnpm install --reporter=silent",
    "test": "nyc mocha test.js --timeout 10s --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/es-check.git"
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in), Brian Gonzalez <me@briangonzalez.org>",
  "bugs": {
    "url": "https://github.com/yowainwright/es-check/issues"
  },
  "homepage": "https://github.com/yowainwright/es-check#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt": "^17.0.3",
    "assert": "^2.0.0",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "path-exists-cli": "^2.0.0",
    "prettier": "^2.5.1",
    "release-it": "^15.1.3"
  },
  "dependencies": {
    "acorn": "^8.7.0",
    "commander": "^9.4.0",
    "fast-glob": "^3.2.11",
    "supports-color": "^9.3.0",
    "winston": "^3.2.1"
  },
  "engines": {
    "node": ">= 4"
  },
  "keywords": [
    "check for es6",
    "check for modules",
    "es",
    "es check",
    "es matching",
    "es version",
    "ecmascript",
    "ecmascript check",
    "ecmascript matching",
    "ecmascript version",
    "js",
    "js version",
    "js version check",
    "js version matching",
    "test js version",
    "test ecmascript version"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "release-it": {
    "github": {
      "release": true
    }
  }
}
